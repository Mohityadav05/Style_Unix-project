{
    "version": 2,
    "functions": {
        "api/index.js": {
            "memory": 1024,
            "maxDuration": 10
        },
        "api/hello.js": {
            "maxDuration": 5
        }
    },
    "rewrites": [
        {
            "source": "/api/hello",
            "destination": "/api/hello.js"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}