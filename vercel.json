{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/hello",
            "destination": "/api/hello.js"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/index.html"
        }
    ]
}